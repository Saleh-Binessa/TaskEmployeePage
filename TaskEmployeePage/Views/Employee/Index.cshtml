@{
    Layout = "_Layout"; // Assuming you have a layout file you want to use
}

@model IEnumerable<TaskEmployeePage.Models.Employee>

<h1>Employees List:</h1>

<table class="table">
    <thead>
        <tr>
            <th>Employee ID</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Email</th>
            <th>Department</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var customer in Model) 
        {
            <tr>
                <td>@customer.EmployeeId</td>
                <td>@customer.FirstName</td>
                <td>@customer.LastName</td>
                <td>@customer.Email</td>
                <td>@customer.Department</td>
            </tr>
        }
    </tbody>
</table>

